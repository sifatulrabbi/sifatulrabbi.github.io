{
    "arrowParens": "always",
    "quoteProps": "preserve",
    "singleQuote": false,
    "jsxSingleQuote": false,
    "bracketSameLine": false,
    "useTabs": false,
    "semi": true,
    "bracketSpacing": true,
    "tabWidth": 4,
    "overrides": [
        {
            "files": "*.{yaml,yml}",
            "options": {
                "printWidth": 80,
                "tabWidth": 2,
                "useTabs": false,
                "singleQuote": true,
                "yamlIndent": 2
            }
        }
    ]
}
